def f(b):
  # Se o valor b for 0 somente retorne 0, caso seja maior somente retorne o valor de a mais b-1 vezes
  if (b > 0):
    # Retorna o valor a somado mais b-1 vezes
    return a+f(b-1)
  else:
    return 0


a = int(input())
b = int(input())

resultado = int()

for i in range(b+1):
  resultado = f(i)

print(resultado)